<div class="container">
  <section class="tutors">
    <div class="intro">
      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            <img class="img-responsive center-block" src="/images/SkillSesh_BrandInitial2.png" style="height: 80px"/>

          </div>
        </div>
      </div>
    </div>
    <div class="tutors-listing">
      <div class="row text-center">
        <% @profiles.each do |profile| %>
        <div class="col-xs-12 col-sm-3">
          <div class="row tutor-unit">
            <div class="col-xs-6 col-sm-12 highlightit">
              <%= link_to user_path(profile.user) do %>
                <%= image_tag profile.photo, :class => 'img-responsive img-circle tutor-photo' %>
              <% end %> </div>
              <div class="col-xs-6 col-sm-12">
                <h4 class="tutor-name">
                  <%= profile.first_name %>
                </h4>
                <p>
                  Teaches
                </p>
                <strong class="tutor-skills tutort">
                <% profile.skills.each do |skill| %>
                  <%= skill.name %>
                <% end %>
                </strong>
              </div>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </section>
  <section class="mission">
