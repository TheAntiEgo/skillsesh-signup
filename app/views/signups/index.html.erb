<div class="modal fade" id="basicModal2" tabindex="-1" role="dialog" aria-labelledby="basicModal2" aria-hidden="true" data-focus-on="input:first">
    <div class="modal-content">
      <%= form_tag subscribe_path, :remote => true, :class => "subscribe_form" do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title" id="myModalLabel">
            <h1 class="text-center">Join us when we launch!</h1>
          </h4>
        </div>
        <div class="modal-body text-center">

            <div class="form-group">
              <%= label_tag 'email', "Enter your email address", :class => "sr-only" %>
              <%= email_field_tag 'email', nil, :placeholder => "joe@example.com", :class => "form-control" %>
            </div>
            <br/>
            <%= submit_tag "Submit", :data => {:toggle => "modal", :target => "#myModal"}, class: "btn btn-large btn-primary" %>
       
      </div>
      <% end %>
    </div>
</div>
    

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-replace ="true">
