<div class="container">
 <div class="user-prompt text-center">
      <div class="row">
        <div class="col-xs-12">
          <p class="lead" style="margin-top: 30px">
            <%= @profile.first_name %>! Thanks for joining Skillsesh.
          </p>
        </div>
      </div>
    </div>
  <div class="user-onboard">
    <div class="user-photo">
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2"> 
        <div class="col-xs-12 col-sm-4 col-sm-offset-4 highlightit">
          <%= image_tag @profile.photo, class: 'img-responsive img-circle' %>
        </div>
      </div>
     </div>
    </div>
    <div class="user-form col-xs-12 col-sm-8 col-sm-offset-2">
      <%= form_for @profile, url: update_path, html: {role: 'form'} do |f| %>
        <div class="form-group text-center" rel="tooltip" title="Search All Items">
          <%= label_tag :bio, "Why don't you tell us a little bit about yourself?", class: 'h4' %>
          <div id="charNum"></div>  
          <%= f.text_area :bio, class: 'form-control has-popover', maxlength: "500", onkeyup: "countChar(this)", placeholder: "500 word max, please, it's just three tweets!", 
           data: {toggle: "popover", html: "true", placement: "top", content: "What Experience do you have? What do you specialize in? What would make you a good teacher?" }, title: "", inputmode: "latin-prose" %>
        </div>
        <div class="form-group text-center">
          <%= label_tag :skills, "What skills can you teach?", class: 'h4' %><br>
          <%= f.text_field :skills, class: 'form-control', data: {role:'tagsinput'}, inputmode: "latin", value: "" %>
        </div>
        <div class="text-center">
          <%= f.submit class: 'btn btn-info btn-default btn-lg text-center', value: "Submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
