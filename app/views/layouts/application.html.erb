    <title><%= content_for?(:title) ? yield(:title) : "foundation-rails" %></title>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Montserrat|Lora|Droid+Sans">
    <%= stylesheet_link_tag    "application" %>
